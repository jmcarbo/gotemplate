# Application
APP_ENV=development
APP_PORT=8080
APP_NAME=selektor

# Database
DATABASE_URL=postgres://selektor:selektor@localhost:5432/selektor?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5
DATABASE_CONNECTION_MAX_LIFETIME=1h

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
JWT_SECRET=your-secret-key-here
BCRYPT_COST=10

# External Services
API_TIMEOUT=30s
HTTP_CLIENT_TIMEOUT=10s

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces